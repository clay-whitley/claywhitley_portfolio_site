<!DOCTYPE html>
<html>
<head>
  <title>PortfolioSite</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="row nav-logo"></div>
  <div class="row nav-full fixed" id="main_nav">
    <%= link_to "WORK", projects_path, class: 'small-4 columns active' %>
    <%= link_to "BLOG", posts_path, class: 'small-4 columns' %>
    <a href="#" class="small-4 columns">ME</a>
  </div>
  <% if user_signed_in? %>
    <div class="row admin-panel">
      <div class="small-3 columns">
        Admin actions:
      </div>
      <div class="small-3 columns">
        <%= link_to "New post", new_post_path %>
      </div>
      <div class="small-3 columns">
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </div>
    </div>
  <% end %>

  <% if notice || alert %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>

  <div class="row main-content">
    <%= yield %>
  </div>

  <!-- Footer -->
 
  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-12 columns">
          <ul class="inline-list left">
            <li><a href="https://github.com/clay-whitley/claywhitley_portfolio_site">Source Code</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

</body>
</html>
